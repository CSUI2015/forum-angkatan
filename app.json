{
  "name": "CuapCuap",
  "scripts": {
    "postdeploy": "php artisan migrate:reset; php artisan migrate"
    },
  "env": {
    "APP_ENV": "staging",
    "APP_KEY": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "APP_DEBUG": "true",
    "CACHE_DRIVER": {
      "required": true
    },
    "QUEUE_DRIVER": {
      "required": true
    },
    "SESSION_DRIVER": {
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "addons": [
    "cleardb",
    "librato",
    "papertrail"
  ]
}
